            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" name="Quantity" type="number" step="0.01" min="0" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <textarea asp-for="Rate" class="form-control" name="Rate"></textarea>
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="form-control" type="Discount" name="Discount" step="0.1" min="0" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
